  <script>
  function istanbulNow(){
    return new Date(new Date().toLocaleString("en-US",{timeZone:"Europe/Istanbul"}));
  }
  function istanbulKey(){
    const n = istanbulNow();
    return `${n.getFullYear()}-${String(n.getMonth()+1).padStart(2,'0')}-${String(n.getDate()).padStart(2,'0')}`;
  }
  function hashIndex(key, len){
    let h = 0;
    for(let i=0;i<key.length;i++) h = (h*31 + key.charCodeAt(i)) >>> 0;
    return h % len;
  }

  // ðŸ“· Foto listesi (assets/yunis/ klasÃ¶rÃ¼ne koy)
  const photos = [
    // Ã¶rnekler:
    // { src:"assets/yunis/01.jpg", caption:"O gÃ¼n Ã§ok gÃ¼ldÃ¼k." },
    // { src:"assets/yunis/02.jpg", caption:"Birlikte susmak bile iyi." },
  ];

  // ðŸ’Œ GÃ¼nlÃ¼k iÃ§erik: yazÄ± + kaynak + opsiyonel hatÄ±rlatma + mood etiketi
  const entries = [
    {
      id:"LOVE-001",
      mood:"yumuÅŸak",
      text:`BugÃ¼n seni sevdiÄŸimi ispatlamak iÃ§in bir ÅŸey yapmam gerekmiyor.
Sevgi bazen sessizce yanÄ±nda durabilmek.`,
      source:"Dammy â†’ Yunis",
      remember:"BugÃ¼n kÃ¼Ã§Ã¼k bir ÅŸey yap: â€˜iyi ki varsÄ±nâ€™ de."
    },
    {
      id:"LOVE-002",
      mood:"gÃ¼lÃ¼mseten",
      text:`Seninle konuÅŸurken cÃ¼mlelerim dÃ¼zgÃ¼n deÄŸilse,
sebebi TÃ¼rkÃ§em deÄŸil.
KafamÄ±n iÃ§i â€˜Yunisâ€™ diye baÄŸÄ±rÄ±yor.`,
      source:"Dammy â†’ Yunis"
    },
    {
      id:"LOVE-003",
      mood:"derin",
      text:`Birlikte bÃ¼yÃ¼mek bazen kolay deÄŸil.
Ama ben â€˜kolayâ€™ diye deÄŸil,
â€˜senâ€™ diye seÃ§tim.`,
      source:"Dammy â†’ Yunis",
      remember:"BugÃ¼n ÅŸu soruyu sor: â€˜Bunu senin iÃ§in daha iyi nasÄ±l yaparÄ±m?â€™"
    }
  ];

  // Script patlarsa ekranda hiÃ§ deÄŸilse bir ÅŸey yazsÄ±n
  window.addEventListener("error", (e) => {
    const el = document.getElementById("msg");
    if(el) el.textContent = "Bir ÅŸeyler bozuldu. Konsola bak (F12).";
    console.error(e);
  });

  document.addEventListener("DOMContentLoaded", () => {
    const now = istanbulNow();
    const hour = now.getHours();
    const isDay = (hour >= 6 && hour < 19);
    if(isDay) document.body.classList.add("day");

    document.getElementById("chipDayNight").textContent = isDay ? "GÃ¼ndÃ¼z modu" : "Gece modu";
    const key = istanbulKey();
    document.getElementById("chipKey").textContent = `GÃ¼n: ${key}`;

    const idx = hashIndex(key, entries.length);
    let current = idx;

    const msgEl = document.getElementById("msg");
    const sourceEl = document.getElementById("source");
    const dateEl = document.getElementById("date");
    const rememberEl = document.getElementById("remember");
    const moodEl = document.getElementById("chipMood");

    const photoCard = document.getElementById("photoCard");
    const photoEl = document.getElementById("photo");
    const captionEl = document.getElementById("caption");

    function render(i){
      const item = entries[i];
      msgEl.textContent = item.text;
      sourceEl.textContent = item.source ? `Kaynak: ${item.source}` : "";
      dateEl.textContent = `â€¢ ${key}`;
      moodEl.textContent = item.mood ? `Mod: ${item.mood}` : "Mod: â€”";

      if(item.remember){
        rememberEl.style.display = "block";
        rememberEl.textContent = `BugÃ¼n ÅŸunu hatÄ±rla: ${item.remember}`;
      } else {
        rememberEl.style.display = "none";
      }

      // Foto: varsa gÃ¼nlÃ¼k foto da seÃ§elim (foto listesi boÅŸsa gizli kalÄ±r)
      if(photos.length > 0){
        const pIdx = (hashIndex(key + "|photo", photos.length));
        const p = photos[pIdx];
        photoEl.src = p.src;
        captionEl.textContent = p.caption || "BugÃ¼nÃ¼n fotoÄŸrafÄ±";
        photoCard.style.display = "block";
      } else {
        photoCard.style.display = "none";
      }

      // Uzun metinde font kÃ¼Ã§Ã¼lt
      const L = item.text.length;
      msgEl.style.fontSize = (L > 700) ? "18px" : "20px";
      if(L > 1000) msgEl.style.fontSize = "17px";
    }

    render(current);

    document.getElementById("btnShuffle").addEventListener("click", () => {
      current = (current + 1) % entries.length;
      render(current);
    });

    document.getElementById("btnCopy").addEventListener("click", async () => {
      const t = entries[current].text;
      try{
        await navigator.clipboard.writeText(t);
        const old = document.getElementById("btnCopy").textContent;
        document.getElementById("btnCopy").textContent = "KopyalandÄ± âœ“";
        setTimeout(()=>document.getElementById("btnCopy").textContent = old, 900);
      }catch{
        alert("Kopyalama izni yok. Metni seÃ§ip kopyalayabilirsin.");
      }
    });
  });
